<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   creationComplete="init(event)"
					   xmlns:view="view.*"
					   tabChildren="false">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import core.Config;

			protected function init(event : FlexEvent) : void
			{
				maximize();
				this.addEventListener(flash.events.Event.ADDED_TO_STAGE, onAddToStage);
			}

			private function onAddToStage(evt : flash.events.Event) : void
			{
				stage.align = StageAlign.TOP_LEFT;
				stage.scaleMode = StageScaleMode.NO_SCALE; 
				stage.frameRate = 24;
				Config.stage = stage;
				Config.layer = this;
				Config.init();
			}
		]]>
	</fx:Script>
	<fx:Declarations>
	</fx:Declarations>

	<view:MainMenu width="100%"
				   id="mainMenu"
				   color="0xffffff"/>
	<view:ControllerPanel id="view_controll"
						  y="{mainMenu.height}"
						  x="{view_left.width}"
						  height="100%"
						  width="73%"/>
	<view:LeftPanel id="view_left"
					y="{mainMenu.height}"
					color="0xffffff"
					width="14%"
					height="100%"/>
	<view:RightPanel y="{mainMenu.height}"
					 x="{view_controll.x+view_controll.width}"
					 width="13%"
					 height="100%"/>
</s:WindowedApplication>
